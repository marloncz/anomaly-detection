{
    // kedro yml schema
    "yaml.schemas": {
        "https://raw.githubusercontent.com/kedro-org/kedro/develop/static/jsonschema/kedro-catalog-0.17.json": "conf/**/*catalog*"
    },
    // git settings
    "git.ignoreLimitWarning": true,
    // todo-tree
    "todo-tree.filtering.excludeGlobs": [
        "docs",
        ".venv",
    ],
    // autodocstring
    "autoDocstring.docstringFormat": "google-notypes",
    // editor settings
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.rulers": [
        100
    ],
    // python settings
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
    "isort.path": [
        "${workspaceFolder}/.venv/bin/isort"
    ],
    "isort.args": [
        "--settings-path=pyproject.toml"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
    "python.linting.flake8Args": [
        "--config=.flake8"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
    "python.formatting.blackArgs": [
        "--config=pyproject.toml"
    ],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
    "python.linting.mypyArgs": [
        "--config-file=pyproject.toml"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
    "python.testing.pytestArgs": [
        "--no-cov"
    ],
    // Docker
    "docker.imageBuildContextPath": "${workspaceFolder}",
    // ensure complience with pre-commit file-end hook
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // VSCode performance improvements
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        ".mypy_cache/**": true,
        ".pytest_cache/**": true,
        ".venv/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/**/*.pyc": true,
        "**/__pycache__": true,
        ".mypy_cache/**": true,
        ".pytest_cache/**": true,
        ".venv/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/**/*.pyc": true,
        "**/__pycache__": true,
        ".mypy_cache/**": true,
        ".pytest_cache/**": true,
        ".venv/**": true
    }
}
